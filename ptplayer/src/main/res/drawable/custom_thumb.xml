<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer circle (grey) -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#CCCCCC" /> <!-- Replace with your desired grey color -->
        </shape>
    </item>
    <!-- Inner circle (orange) -->
    <item android:top="4dp" android:left="4dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="oval">
            <solid android:color="#FFA500" /> <!-- Replace with your desired orange color -->
        </shape>
    </item>
</layer-list>